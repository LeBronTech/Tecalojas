rules_version = '2';

service cloud.firestore {
  match /databases/{database}/documents {
  
    // Função auxiliar robusta para verificar se o usuário é um administrador
    // Evita recursividade garantindo que o get não dependa de si mesmo
    function isAdmin() {
      return request.auth != null && 
             get(/databases/$(database)/documents/users/$(request.auth.uid)).data.role == 'admin';
    }

    // Regras para a coleção 'settings'
    // Prioridade máxima: Leitura pública para que qualquer cliente veja preços corretos (taxas)
    match /settings/global_settings {
      allow read: if true;
      allow write: if isAdmin();
    }
    
    // Fallback para outros documentos de configuração
    match /settings/{docId} {
      allow read: if true;
      allow write: if isAdmin();
    }

    // Regras para a coleção 'products'
    match /products/{productId} {
      allow read: if true;
      allow write: if isAdmin();
    }
    
    // Regras para marcas, catálogos e categorias
    match /brands/{brandId} {
        allow read: if true;
        allow write: if isAdmin();
    }
    match /catalogs/{catalogId} {
        allow read: if true;
        allow write: if isAdmin();
    }
    match /categories/{categoryId} {
        allow read: if true;
        allow write: if isAdmin();
    }

    // Regras para a coleção 'users'
    match /users/{userId} {
      // Usuário pode ler seu próprio documento sem recursividade. 
      // Admins podem ler qualquer um usando get direto no campo role.
      allow read: if request.auth != null && (request.auth.uid == userId || get(/databases/$(database)/documents/users/$(request.auth.uid)).data.role == 'admin');
      
      // Apenas o próprio usuário pode editar seu perfil básico
      allow write: if request.auth != null && request.auth.uid == userId;
    }

    // Regras para a coleção 'saleRequests'
    match /saleRequests/{requestId} {
      // Qualquer usuário logado pode criar um pedido
      allow create: if request.auth != null;
      // Apenas administradores podem gerenciar e visualizar a lista de pedidos
      allow read, list, update, delete: if isAdmin();
    }
  }
}