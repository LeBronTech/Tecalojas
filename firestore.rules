rules_version = '2';

service cloud.firestore {
  match /databases/{database}/documents {
  
    // Função auxiliar para verificar se o usuário é um administrador
    function isAdmin() {
      return exists(/databases/$(database)/documents/users/$(request.auth.uid)) &&
             get(/databases/$(database)/documents/users/$(request.auth.uid)).data.role == 'admin';
    }

    // Regras para a coleção 'products'
    // Qualquer pessoa pode ler os produtos (Vitrine).
    // Apenas administradores podem criar, atualizar ou deletar produtos.
    match /products/{productId} {
      allow read: if true;
      allow write: if isAdmin();
    }
    
    // Regras para a coleção 'brands' e 'catalogs'
    match /brands/{brandId} {
        allow read: if true;
        allow write: if isAdmin();
    }
    match /catalogs/{catalogId} {
        allow read: if true;
        allow write: if isAdmin();
    }

    // Regras para a coleção 'users'
    // Usuários só podem ler seus próprios dados. Administradores podem ler todos.
    match /users/{userId} {
      allow read: if request.auth.uid == userId || isAdmin();
      allow write: if request.auth.uid == userId;
    }

    // Regras para a coleção 'saleRequests' (Pedidos de Venda)
    // QUALQUER USUÁRIO AUTENTICADO pode criar um pedido.
    // APENAS ADMINISTRADORES podem ler a lista de pedidos e atualizá-los.
    match /saleRequests/{requestId} {
      allow create: if request.auth != null;
      allow read, list, update, delete: if isAdmin();
    }
  }
}