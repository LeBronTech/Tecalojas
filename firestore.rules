
rules_version = '2';

service cloud.firestore {
  match /databases/{database}/documents {
  
    // Função auxiliar para verificar se o usuário autenticado é um administrador.
    function isAdmin() {
      return request.auth != null && 
             get(/databases/$(database)/documents/users/$(request.auth.uid)).data.role == 'admin';
    }

    // Coleção Settings (Cores, Taxas, etc):
    // CRÍTICO: 'allow read: if true' é essencial para que o menu de cores funcione
    // para todos os usuários, inclusive visitantes não logados na vitrine.
    match /settings/{docId} {
      allow read: if true;
      allow write: if isAdmin();
    }

    // Produtos, Marcas, Catálogos e Categorias:
    // Leitura pública (Vitrine), Escrita apenas Admins.
    match /products/{docId} {
      allow read: if true;
      allow write: if isAdmin();
    }
    
    match /brands/{docId} {
      allow read: if true;
      allow write: if isAdmin();
    }
    
    match /catalogs/{docId} {
      allow read: if true;
      allow write: if isAdmin();
    }
    
    match /categories/{docId} {
      allow read: if true;
      allow write: if isAdmin();
    }

    // Perfis de usuário:
    match /users/{userId} {
      allow read: if request.auth != null && (request.auth.uid == userId || isAdmin());
      allow write: if request.auth != null && request.auth.uid == userId;
    }

    // Solicitações de Venda:
    // Qualquer usuário logado pode criar (fazer pedido).
    // Admins gerenciam tudo.
    match /saleRequests/{requestId} {
      allow create: if request.auth != null;
      allow read, update, delete: if isAdmin();
    }
  }
}
