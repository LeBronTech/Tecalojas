rules_version = '2';

service cloud.firestore {
  match /databases/{database}/documents {
  
    // Função auxiliar para verificar se o usuário autenticado é um administrador.
    function isAdmin() {
      return request.auth != null && 
             get(/databases/$(database)/documents/users/$(request.auth.uid)).data.role == 'admin';
    }

    // Coleções com leitura pública:
    // Qualquer pessoa (logada ou não) pode ler os dados, o que é essencial para a vitrine.
    // Apenas administradores podem escrever, editar ou apagar.
    match /(products|brands|catalogs|categories|settings)/{docId} {
      allow read: if true;
      allow write: if isAdmin();
    }

    // Perfis de usuário:
    // Usuários podem ler seu próprio perfil. Administradores podem ler qualquer perfil.
    match /users/{userId} {
      allow read: if request.auth != null && (request.auth.uid == userId || isAdmin());
      // Usuários podem criar ou editar seu próprio documento de perfil.
      allow write: if request.auth != null && request.auth.uid == userId;
    }

    // Solicitações de Venda:
    // Qualquer usuário logado pode criar uma solicitação (fazer um pedido).
    // Apenas administradores podem ler, atualizar ou deletar os pedidos.
    match /saleRequests/{requestId} {
      allow create: if request.auth != null;
      allow read, update, delete: if isAdmin();
    }
  }
}