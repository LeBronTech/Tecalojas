
rules_version = '2';

service cloud.firestore {
  match /databases/{database}/documents {
  
    // Função auxiliar para verificar se o usuário autenticado é um administrador.
    function isAdmin() {
      return request.auth != null && 
             get(/databases/$(database)/documents/users/$(request.auth.uid)).data.role == 'admin';
    }

    // --- COLEÇÕES DE LEITURA PÚBLICA (Essenciais para a Vitrine) ---

    // Configurações (Cores, Taxas, Metas):
    // allow read: if true; -> Resolve o erro "permission-denied" no listener de configurações.
    match /settings/{docId} {
      allow read: if true;
      allow write: if isAdmin();
    }

    // Produtos: Todos podem ver, apenas Admin edita.
    match /products/{docId} {
      allow read: if true;
      allow write: if isAdmin();
    }
    
    // Marcas: Todos podem ver.
    match /brands/{docId} {
      allow read: if true;
      allow write: if isAdmin();
    }
    
    // Catálogos PDF: Todos podem ver.
    match /catalogs/{docId} {
      allow read: if true;
      allow write: if isAdmin();
    }
    
    // Categorias: Todos podem ver.
    match /categories/{docId} {
      allow read: if true;
      allow write: if isAdmin();
    }

    // --- COLEÇÕES PROTEGIDAS ---

    // Perfis de usuário:
    // Usuário lê/escreve o próprio perfil. Admin lê tudo.
    match /users/{userId} {
      allow read: if request.auth != null && (request.auth.uid == userId || isAdmin());
      allow write: if request.auth != null && request.auth.uid == userId;
    }

    // Solicitações de Venda (Pedidos):
    // Visitantes (unauthenticated) podem criar pedidos.
    // Apenas Admin pode ler a lista de pedidos, editar ou excluir.
    match /saleRequests/{requestId} {
      allow create: if true;
      allow read, update, delete: if isAdmin();
    }
  }
}
