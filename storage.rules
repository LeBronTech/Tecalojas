
rules_version = '2';

service firebase.storage {
  match /b/{bucket}/o {
    
    // Função auxiliar para verificar no Firestore se o usuário é um administrador.
    function isAdmin() {
      return request.auth != null && 
             firestore.get(/databases/(default)/documents/users/$(request.auth.uid)).data.role == 'admin';
    }

    // Regra de leitura global:
    // Permite que qualquer pessoa veja as imagens dos produtos, logos, etc.
    match /{allPaths=**} {
      allow read: if true;
    }

    // Regras de escrita (Upload/Delete):
    // Apenas administradores podem enviar ou apagar arquivos nas pastas protegidas.
    // Atualizado para incluir 'brands' conforme usado no código (SettingsScreen).
    match /(products|brands|catalogs)/{allPaths=**} {
      allow write: if isAdmin();
    }
  }
}
